extends ../layout 

block content
    h2 Publication Awards Recipients
    table(align="center")
            tr(class="row-headers")
                th Date
                th Name - Click for Press Release
                th Author
            each award in awards
                tr
                    th= award.Press_Release_Date__c
                    th
                        a(href="/awards/publication/#{award.Id}") #{award.Name}
                    th= award.Public_Author_Name__c